{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:@cazoo/eslint/react"
    ],
    "env": {
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module",
        "project": [
            "tsconfig.json"
        ]
    },
    "plugins": [],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "rules": {
        "quotes": [
            2,
            "double",
            {
                "avoidEscape": true
            }
        ]
    }
}